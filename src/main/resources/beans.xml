<?xml version="1.0" encoding="UTF-8"?>
<beans	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:jaxrs="http://cxf.apache.org/jaxrs"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
		
		<context:component-scan base-package="com.jarias14.tekstratego.service"/>
		
		<import resource="classpath:META-INF/cxf/cxf.xml" />
		<import resource="classpath:membaseAppContext.xml" />
		<import resource="classpath:pricerAppContext.xml" />
		
		<jaxrs:server id="restThinkerContainer" address="/thinker-service/">
			<jaxrs:serviceBeans>
				<ref bean="restThinkerService" />
			</jaxrs:serviceBeans>
		</jaxrs:server>
		
		<jaxrs:server id="restPricerContainer" address="/pricer-service/">
			<jaxrs:serviceBeans>
				<ref bean="restPricerService" />
			</jaxrs:serviceBeans>
		</jaxrs:server>

</beans>